<Window x:Class="PlantSCADA_Logviewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlantSCADA_Logviewer"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Plant SCADA log viewer"
        d:DataContext="{d:DesignInstance local:MainViewModel, IsDesignTimeCreatable=True}"
        Height="450"
        Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="80" />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.Resources>
            <Style TargetType="StackPanel"
                   x:Key="DateBox">
                <Setter Property="HorizontalAlignment"
                        Value="Center" />
                <Setter Property="VerticalAlignment"
                        Value="Center" />
            </Style>
            <Style TargetType="Button">
                <Setter Property="Height"
                        Value="30" />
                <Setter Property="Width"
                        Value="150" />
            </Style>
        </Grid.Resources>
        <TextBox Name="tb_logsPath"
                 Text="{Binding LogsPath}"
                 Grid.Row="0"
                 Grid.ColumnSpan="2"
                 Grid.Column="0"
                 TextAlignment="Center"
                 VerticalContentAlignment="Center"
                 Margin="15" />
        <Button Grid.Row="0"
                Grid.Column="2"
                Name="btn_Browse"
                Command="{Binding BrowseFolders}"
                Margin="15">Browse</Button>
        <StackPanel Grid.Row="1"
                    Grid.Column="0"
                    Style="{StaticResource DateBox}">
            <TextBlock>Date Start</TextBlock>
            <DatePickerTextBox Name="dp_dateStart"
                               Text="{Binding FilterTime.DateStart}" />

        </StackPanel>
        <StackPanel Grid.Row="1"
                    Grid.Column="1"
                    Style="{StaticResource DateBox}">
            <TextBlock>Date End</TextBlock>
            <DatePickerTextBox Name="dp_dateEnd"
                               Text="{Binding FilterTime.DateEnd}" />


        </StackPanel>
        <ComboBox Grid.Column="2"
                  Grid.Row="1"
                  Margin="1,28"
                  ItemsSource="{Binding TimeFilterChoices}"
                  DisplayMemberPath="Item1"
                  SelectedValuePath="Item2"
                  SelectedValue="{Binding HoursBefore}"
                  SelectedIndex="0"
                  HorizontalContentAlignment="Left"
                  VerticalContentAlignment="Center"
                  >            
        </ComboBox>
        <Button Grid.Row="1"
                Grid.Column="3"
                Margin="15"
                Name="btn_Set"
                Command="{Binding ApplyTimeFilter}">
            Apply
        </Button>
        <TreeView Name="tv_components"
                  Grid.Row="2"
                  Grid.Column="0"
                  Grid.RowSpan="2"
                  ItemsSource="{Binding TreeElems}">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Children}"
                                          DataType="{x:Type local:INodeLog}">
                    <StackPanel Orientation="Horizontal">
                        <CheckBox IsChecked="{Binding Selected}" />
                        <TextBlock Text="{Binding Name}" />
                    </StackPanel>


                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
        <DockPanel Grid.Row="2"
                   Grid.Column="1"
                   Grid.RowSpan="2"
                   Grid.ColumnSpan="3">

            <DataGrid ItemsSource="{Binding LogViewer}"
                      AutoGenerateColumns="False"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                      DockPanel.Dock="Top">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Timestamp"
                                        Binding="{Binding Date, StringFormat='yyyy-MM-dd HH:mm:ss.fff zzz'}"
                                        IsReadOnly="True" SortMemberPath="Date"/>
                    <DataGridTextColumn Header="Source"
                                        Binding="{Binding Path=Source}"
                                        IsReadOnly="True" />
                    <DataGridTemplateColumn Width="*"
                                            Header="Message"
                                            IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Message}"
                                           ToolTip="{Binding Message}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>

            </DataGrid>


        </DockPanel>
        <Button Grid.Column="3"
                x:Name="btn_Set_Copy"
                Command="{Binding SetTree}"
                Content="Apply" />

        <!--<TabControl Name="tbc_openedFiles"
                    Grid.Row="2"
                    Grid.Column="1"
                    Grid.RowSpan="2"
                    Grid.ColumnSpan="3"
                    ItemsSource="{Binding LogViews}"
                    >
            <TabControl.ItemTemplate>                
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Name}" />
                        <DataGrid></DataGrid>
                    </StackPanel>
                </DataTemplate>
            </TabControl.ItemTemplate>
        </TabControl>-->
    </Grid>
</Window>
